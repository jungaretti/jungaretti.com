---
import { getCollection } from "astro:content";
import type { Metadata } from "../../types/Metadata";
import ParksLayout from "../../layouts/ParksLayout.astro";

const meta: Metadata = {
  title: "National Parks - JP Ungaretti",
  description: "List of national parks that I want to visit.",
};

const parks = await getCollection("nationalParks");
---

<ParksLayout
  meta={meta}
  scope="National"
  parks={parks.map(({ data }) => data)}
/>
