---
import { photos } from "../data/photos";
import { defaultHeadMeta } from "../data/types/HeadMeta";
import BaseLayout from "../layouts/BaseLayout.astro";
import PhotoGallery from "../components/PhotoGallery.astro";

const meta = defaultHeadMeta;
---

<BaseLayout meta={meta}>
  <div class="frame my-16 md:my-28">
    <div class="text-left">
      <h1 class="font-black text-flash text-4xl md:text-5xl">JP Ungaretti</h1>
      <p class="sfont-medium leading-tight text-lg md:text-2xl">
        Developer and Photographer
      </p>
    </div>
  </div>
  <div class="frame my-4">
    <h2 class="text-3xl font-bold">My Photos</h2>
    <div class="mt-3">
      <PhotoGallery photos={photos} />
    </div>
  </div>
</BaseLayout>
