      <LinkBubble text="hello@jungaretti.com" href="mailto:hello@jungaretti.com"
      />
      <LinkBubble text="GitHub" href="https://github.com/jungaretti" />
    </div>
  </div> -->
  <div class="container my-8">
    <h2 class="text-3xl font-bold">Favorite Photos</h2>
    <div class="mt-2">
      <PhotoGallery photos={photos.filter((p) => p.meta.favorite)} />
    </div>
  </div>
</BaseLayout>
