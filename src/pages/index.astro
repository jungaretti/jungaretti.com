---
import { photos } from "../data/photos.js";
import BaseLayout from "../layouts/BaseLayout.astro";
import LinkBubble from "../components/LinkBubble.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
---

<BaseLayout>
  <div class="container">
    <div class="bg-star rounded-2xl flex flex-col justify-end h-banner">
      <div class="text-center py-2 pb-4 md:pb-6">
        <h1 class="font-black text-4xl md:text-5xl">JP Ungaretti</h1>
        <p class="font-medium text-lg md:text-xl">Developer and Photographer</p>
      </div>
    </div>
  </div>
