---
import type { Photo } from "../../data/types/Image";
import type { HeadMeta } from "../../data/types/HeadMeta";
import { photos } from "../../data/photos";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/Section.astro";

export interface Props {
  photo: Photo;
}
const { photo } = Astro.props as Props;

export const getStaticPaths = async () => {
  return photos.map((p) => {
    return { params: { id: p.id }, props: { photo: p } as Props };
  });
};

const meta: HeadMeta = {
  title: `${photo.title} - JP Ungaretti`,
  description: photo.description,
  imageSrc: photo.src.compressed,
};
---

<BaseLayout meta={meta}>
  <div class="frame">
    <Section title={photo.title}>
      <div>
        <img
          src={photo.src.compressed}
          alt={photo.alt}
          class="w-full rounded-xl"
        />
      </div>
      <div class="my-3 md:flex md:flex-row">
        <div class="flex-auto space-y-2">
          <div>
            <p>{photo.location}</p>
            <p>
              {photo.date?.toLocaleString("en-US", { month: "long" })}
              {photo.date?.getFullYear()}
            </p>
          </div>
        </div>
        <div class="mt-3 md:mt-0">
          <p>
            <a href={photo.src.original} class="underline">
              Download Original
            </a>
          </p>
        </div>
      </div>
    </Section>
  </div>
</BaseLayout>
