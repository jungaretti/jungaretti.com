---
export interface Props {
  title: string;
  detail: string;
}
const { title, detail } = Astro.props as Props;
---

<div class="my-16 md:my-28">
  <div class="text-left">
    <h1 class="font-black text-flash text-4xl md:text-5xl">{title}</h1>
    <p class="sfont-medium leading-tight text-lg md:text-2xl">
      {detail}
    </p>
  </div>
</div>
