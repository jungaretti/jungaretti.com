---
import BaseHead, { Props as BaseHeadProps } from "./BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import BaseHeadNew, { Props as BaseHeadNewProps } from "./BaseHeadNew.astro";
import { defaultHeadMeta } from "../data/types/HeadMeta";

const { title, description, permalink, image } = Astro.props as BaseHeadProps;

// Gen2 head component
Astro.props.meta = Astro.props.meta ?? defaultHeadMeta;
const { meta } = Astro.props as BaseHeadNewProps;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      permalink={permalink}
      image={image}
    />
    <BaseHeadNew meta={meta} />
  </head>
  <body class="bg-griko text-cultured">
    <header>
      <div class="frame my-4 md:my-8">
        <Navbar />
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <div class="frame my-4">
        <hr class="opacity-20 mb-2" />
        <div
          class="flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-4"
        >
          <div>
            <h5 class="font-bold">Here</h5>
            <ul>
              <a href="/">Home</a>
            </ul>
          </div>
          <div>
            <h5 class="font-bold">There</h5>
            <ul>
              <li>
                <a href="https://github.com/jungaretti">GitHub</a>
              </li>
            </ul>
          </div>
          <div>
            <h5 class="font-bold">Everywhere</h5>
            <p>Photography Â© 2022 JP Ungaretti.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
